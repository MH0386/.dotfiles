{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "enabled": true,
      "headers": {
        "Accept": "application/json, text/event-stream",
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "fetch": {
      "command": [
        "uvx",
        "mcp-server-fetch"
      ],
      "enabled": true,
      "type": "local"
    },
    "git": {
      "command": [
        "uvx",
        "mcp-server-git"
      ],
      "enabled": true,
      "type": "local"
    },
    "memory": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "enabled": true,
      "type": "local"
    },
    "sequential-thinking": {
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "type": "local"
    },
    "time": {
      "command": [
        "uvx",
        "mcp-server-time"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "plugin": [
    "opencode-agent-skills"
  ]
}